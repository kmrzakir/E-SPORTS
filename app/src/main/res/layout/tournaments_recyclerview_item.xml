<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@color/background"
    >
   <ImageView
       android:id="@+id/tornaments_imageview"
       android:layout_width="match_parent"
       android:layout_height="194dp"
       android:src="@drawable/free_fire_image"
       android:scaleType="centerCrop"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:padding="20dp"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="52dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUBG Esports Championship"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxanium_semibold"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="15 Sept 2023 / 20:00 PM IST"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_semibold"
                    />
            </LinearLayout>
        
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play mode"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxanium_semibold"
                        />
                    <TextView
                        android:id="@+id/playModeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 V 1"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxanium_semibold"
                        android:layout_marginTop="6dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxanium_semibold"
                        />
                    <TextView
                        android:id="@+id/platformTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxanium_semibold"
                        android:layout_marginTop="6dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxanium_semibold"
                        />

                    <TextView
                        android:id="@+id/prizeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/oxanium_semibold"
                        android:text="$500"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                </LinearLayout>
                
            </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
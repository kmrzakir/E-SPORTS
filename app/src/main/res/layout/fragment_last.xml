<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LastFragment"
    android:background="@color/background"
    >

     <LinearLayout
         android:id="@+id/linearlayout1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintHorizontal_bias="0.5"
         android:layout_marginTop="30dp"
         android:orientation="vertical"
         android:gravity="center_horizontal"
         >

         <ImageView
             android:layout_width="80dp"
             android:layout_height="62dp"
             android:src="@drawable/astro_img"
             android:layout_marginBottom="40dp"
             />
         <TextView
             android:id="@+id/about_us"
             android:layout_width="126dp"
             android:layout_height="25dp"
             android:text="About Us"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="16dp"
             android:fontFamily="@font/inter_semibold"
             android:layout_marginBottom="30dp"
             />
         <TextView
             android:id="@+id/Sponsorships"
             android:layout_width="126dp"
             android:layout_height="25dp"
             android:text="Sponsorships"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="16dp"
             android:fontFamily="@font/inter_semibold"
             android:layout_marginBottom="30dp"
             />
         <TextView
             android:id="@+id/join_us"
             android:layout_width="126dp"
             android:layout_height="25dp"
             android:text="Join Us"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="16dp"
             android:fontFamily="@font/inter_semibold"
             android:layout_marginBottom="30dp"
             />
         <TextView
             android:id="@+id/Terms_and_Conditions"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:text="Terms and Conditions"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="16dp"
             android:fontFamily="@font/inter_semibold"
             android:layout_marginBottom="30dp"
             />
         <TextView
             android:id="@+id/Privacy_Policy"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:text="Privacy Policy"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="16dp"
             android:fontFamily="@font/inter_semibold"
             />


     </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="292dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
  <EditText
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:hint="Enter your Email"
      android:textColor="@color/white"
      android:textColorHint="@color/text_hint_color"
      android:paddingLeft="20dp"
      android:background="@drawable/slaunted_stroke_3"
      />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="163dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Subscribe"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/slanted_rectangle_1"
            android:fontFamily="@font/oxanium_semibold"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayour2"
        android:layout_width="216dp"
        android:layout_height="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout2"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="104dp"
            android:layout_height="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Fallow Us"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/oxanium_semibold"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:src="@drawable/slanted_bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/facebook_ic"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/instagram_ic2"
                android:layout_marginLeft="40dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/youtube_ic"
                android:layout_marginLeft="40dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/discord_ic"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayour2"
        android:layout_marginTop="40dp"
        android:text="Â© 2023 UX Chandan. All Rights Reserved."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/inter_semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        >
        
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:src="@drawable/free_fire_image"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/label_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanical gaming keyboard"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/oxanium_semibold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/prize_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$399"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/oxanium_extrabold"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>